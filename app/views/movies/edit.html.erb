<%= form_with(model: @movie, method: :patch, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :released %>
  <%= form.check_box :released %>

  <%= form.submit "Update Movie" %>
<% end %>
